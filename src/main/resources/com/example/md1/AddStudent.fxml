<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.md1.AddStudentController">
   <children>
      <AnchorPane fx:id="main_form" layoutX="13.0" layoutY="12.0" prefHeight="374.0" prefWidth="573.0">
         <children>
            <Label alignment="TOP_CENTER" layoutY="13.0" prefHeight="38.0" prefWidth="564.0" text="Student Information">
               <font>
                  <Font name="Arial Rounded MT Bold" size="24.0" />
               </font>
            </Label>
            <Label layoutX="25.0" layoutY="89.0" text="Student Number:" />
            <Label layoutX="60.0" layoutY="124.0" text="Full Name:" />
            <Label layoutX="90.0" layoutY="219.0" text="Year:" />
            <Label layoutX="74.0" layoutY="259.0" text="Course:" />
            <TextField fx:id="student_number" layoutX="160.0" layoutY="85.0" promptText="Student Number" />
            <TextField fx:id="student_name" layoutX="160.0" layoutY="120.0" promptText="Full Name" />
            <ComboBox fx:id="student_year" layoutX="161.0" layoutY="211.0" prefWidth="150.0" promptText="Choose.." />
            <ComboBox fx:id="student_course" layoutX="161.0" layoutY="254.0" prefWidth="150.0" promptText="Choose.." />
            <Button fx:id="student_addBtn" layoutX="199.0" layoutY="325.0" mnemonicParsing="false" onAction="#addBtn" prefHeight="28.0" prefWidth="74.0" text="Add" />
            <Button fx:id="student_updateBtn" layoutX="311.0" layoutY="325.0" mnemonicParsing="false" onAction="#updateBtn" prefHeight="28.0" prefWidth="74.0" text="Update" />
            <Label layoutX="348.0" layoutY="219.0" text="Section:" />
            <ComboBox fx:id="student_section" layoutX="409.0" layoutY="211.0" prefWidth="150.0" promptText="Choose.." />
            <ComboBox fx:id="student_status" layoutX="409.0" layoutY="254.0" prefWidth="150.0" promptText="Choose.." />
            <Label layoutX="351.0" layoutY="259.0" text="Status:" />
            <Line endX="100.0" layoutX="282.0" layoutY="51.0" startX="-100.0" />
            <Label layoutX="62.0" layoutY="169.0" text="Birth Date:" />
            <DatePicker fx:id="student_birthDate" layoutX="146.0" layoutY="165.0" onAction="#countAge" />
            <Label layoutX="339.0" layoutY="169.0" text="Semester:" />
            <ComboBox fx:id="student_semester" layoutX="409.0" layoutY="164.0" prefWidth="150.0" promptText="Choose.." />
            <Label layoutX="349.0" layoutY="101.0" text="Gender:" />
            <ComboBox fx:id="student_gender" layoutX="409.0" layoutY="96.0" prefWidth="150.0" promptText="Choose.." />
         </children>
      </AnchorPane>
   </children>
</AnchorPane>
